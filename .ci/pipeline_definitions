aws-lb-readvertiser:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          aws-lb-readvertiser:
            inputs:
              repos:
                source: ~ # default
              steps:
                build: ~
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/aws-lb-readvertiser'
    steps:
      check:
        image: 'golang:1.19.4'
      build:
        image: 'golang:1.19.4'
        output_dir: 'binary'
  jobs:
    head-update:
      traits:
        draft_release: ~
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor:
          component_name: 'github.com/gardener/aws-lb-readvertiser'
